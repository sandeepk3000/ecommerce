<body>
    <div class="container p-2 accountSettings">
        <h2>Login & Security</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Your Account</a></li>
                <li class="breadcrumb-item"><a href="#">Login & Security</a></li>
            </ol>
        </nav>
        <ul class="list-group">
            <li class="list-group-item">
                <div class="card  border-0">
                    <div class="card-body">
                        <h5 class="card-title">Name:</h5>
                        <p class="card-text">{{username}}</p>
                        <a href="/account/page?action=changeName&&target={{_id}}" class="btn btn-primary" type="submit">Edit</a>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="card  border-0">
                    <div class="card-body">
                        <h5 class="card-title">E-mail:</h5>
                        <p class="card-text">{{email}}</p>
                        <a href="/account/page?action=changeEmail&&target={{_id}}" class="btn btn-primary" type="submit">Edit</a>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="card  border-0">
                    <div class="card-body">
                        <h5 class="card-title">password:</h5>
                        <p class="card-text">.....</p>
                        <a href="/account/page?action=changePassword&&target={{_id}}" class="btn btn-primary" type="submit">Edit</a>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="card w-75 border-0">
                    <div class="card-body">
                        <h5 class="card-title">Mobile Number:</h5>
                        <p class="card-text">{{mobilenumber}}</p>
                        <a href="/account/page?action=changeNumber&&target={{_id}}" class="btn btn-primary" type="submit">Edit</a>
                    </div>
                </div>
            </li>
        </ul>
    </div>
     <script src="/socket.io/socket.io.js"></script>
